source 'https://rubygems.org'

group :development do
  gem 'pry-byebug', platform: :mri
  gem 'ruby-maven', platform: :jruby
  gem 'ruby-prof', platform: :mri
end

# This is a minimal set of Gems required to build on travis
group :test do
  gem 'bundler'
  gem 'rake'
  gem 'rspec'
  gem 'simplecov'
end

gemspec
